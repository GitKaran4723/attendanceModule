# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For development, SQLite is fine
DATABASE_URL=sqlite:///instance/attendance.db

# For production, use PostgreSQL or MySQL:
# DATABASE_URL=postgresql://username:password@localhost/attendance_db
# DATABASE_URL=mysql://username:password@localhost/attendance_db

# App Configuration
DEBUG=True

# Security (for production)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Email Configuration (optional - for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password

# SMS Configuration (optional)
# SMS_API_KEY=your-sms-api-key
# SMS_SENDER_ID=BCABUB
